<p id="notice"><%= notice %></p>

<h1>Products</h1>
<div class="container-fluid">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-sm">
        <a href="#"><h1> <%= product.name %></h1></a>
        <p> <%= product.description %></p>
        <p><%= product.colour %> </p>
        <p><%= product.price %> </p>
        <%= image_tag(product.image_url, class: "img-fluid") %>
        <strong>$ 42</strong>
      </div><!-- /col -->
    <% end %>
  </div>
</div>
<br>
<%= link_to 'New Product', new_product_path %>
