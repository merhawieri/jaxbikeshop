<div class="container-fluid mkw">
  <div class="row">
    <div class="col-md-4 col-sm-4 col-xs-12"></div>
    <div class="col-md-4 col-sm-4 col-xs-12">

<h2> you can contact me at</h2>
<h1>Contact Us</h1>

<%= flash[:notice] %>

<%= form_with(url:simple_pages_thank_you_path, method: "post", local: true) do |form| %>-->

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control", placeholder: "Enter Name" required: true %>
  </div>
  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control", placeholder: "Enter Email" required: true %>
  </div>
  <div class="form-group">
    <%= form.label :message %>
    <%= form.text_area :message, class: "form-control", placeholder: "Enter Message" required:true, rows: 5 %>
  </div>

<%= form.submit "Send", class: "form_label" %>
<% end %>
</div>
<div class="col-md-4 col-sm-4 col-xs-12"></div>
</div>
</div>
