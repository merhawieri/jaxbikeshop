


<div class="row">
  <% @orders.each do |order| %>
    <div class="col-sm">
      <h1>Order # <%= order.id %>:
        <%= link_to order.product.name, orders_show_path %>
      </h1>
      <p><%= order.product.description %></p>
      <strong>$ <%= order.product.price %></strong>
    </div><!-- /col -->
  <% end %>
</div>
